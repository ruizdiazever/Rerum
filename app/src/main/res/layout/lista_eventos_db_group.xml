<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtViewDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:text="Recital U2"
        style="@style/texto"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgViewDB"
            android:layout_width="105dp"
            android:layout_height="88dp"
            android:layout_margin="5dp"
            android:layout_marginRight="155dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtFechaDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtLugar"
                android:text="Fecha: 23/06/2017"
                style="@style/texto"/>

            <TextView
                android:id="@+id/txtLugarDB"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Estadio River Plate"
                style="@style/texto"/>

            <TextView
                android:id="@+id/txtResumenDB"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="13dp"
                android:text="Descripcion"
                style="@style/texto"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
